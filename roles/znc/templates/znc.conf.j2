// WARNING
//
// Do NOT edit this file while ZNC is running!
// Use webadmin or *controlpanel instead.
//
// Buf if you feel risky, you might want to read help on /znc saveconfig and /znc rehash.
// Also check http://en.znc.in/wiki/Configuration



AnonIPLimit = 10
ConnectDelay = 5
LoadModule = webadmin
LoadModule = fail2ban
LoadModule = lastseen
MaxBufferSize = 500
PidFile = /var/run/znc/znc.pid
ProtectWebSessions = true
SSLCertFile = /etc/ssl/znc-combined.pem
ServerThrottle = 30
Skin = _default_
StatusPrefix = *
Version = 1.0


{% for listener in znc_listeners %}
<Listener {{listener.id}}>
    AllowIRC = {{listener.AllowIRC}}
    AllowWeb = {{listener.AllowWeb}}
    Port = {{listener.Port}}
    IPv4 = {{listener.IPv4}}
    IPv6 = {{listener.IPv6}}
    SSL = {{listener.SSL}}
</Listener>
{% endfor %}


{% for user in znc_users %}
<User {{user.name}}>
    Pass = {{user.Pass}}
    Admin = {{user.Admin}}
    Allow = {{user.Allow}}
    Nick = {{user.Nick}}
    AltNick = {{user.AltNick}}
    Ident = {{user.Ident}}
    RealName = {{user.RealName}}
    Buffer = {{user.Buffer}}
    AutoClearChanBuffer = {{user.AutoClearChanBuffer}}
    ChanModes = {{user.ChanModes}}
    DenyLoadMod = {{user.DenyLoadMod}}
    DenySetBindHost = {{user.DenySetBindHost}}
    JoinTries = {{user.JoinTries}}
    PrependTimestamp = {{user.PrependTimestamp}}
    AppendTimestamp = {{user.AppendTimestamp}}
    TimestampFormat = {{user.TimestampFormat}}
    MaxNetworks = {{user.MaxNetworks}}
    MultiClients = {{user.MultiClients}}
    QuitMsg = {{user.QuitMsg}}
{% for module in user.Modules %}
    LoadModule = {{module.name}}
{% endfor %}

    {% for network in user.Networks %}
    <Network network.name>
        Server = {{network.Server}}
        FloodBurst = {{network.FloodBurst}}
        FloodRate = {{network.FloodRate}}
        IRCConnectEnabled = {{network.IRCConnectEnabled}}
{% for module in network.modules %}
        LoadModule = {{module.name}}
{% endfor %}
    </Network>
    {% endfor %}

</user>
{% endfor %}
